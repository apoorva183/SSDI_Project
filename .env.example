# Environment variables for NinerMatch
# Copy this file to .env and update with your actual MongoDB Atlas values

# MongoDB Atlas connection string
# Get this from your MongoDB Atlas dashboard -> Connect -> Connect your application
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/ninermatch?retryWrites=true&w=majority
DATABASE_NAME=ninermatch

# Flask secret key for sessions (generate a secure random key)
SECRET_KEY=your-super-secret-key-change-this-to-something-random

# File storage settings
MAX_FILE_SIZE=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=pdf

# Application settings
DEBUG=True
PORT=5000
HOST=127.0.0.1

# Future features (for matching algorithm)
SIMILARITY_THRESHOLD=0.7
MAX_RECOMMENDATIONS=3
ENABLE_DIVERSITY_NUDGE=True